<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64</Platforms>
    <Version>0.6.0</Version>
    <Configurations>Debug;Release;GithubRelease</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JeremyAnsel.BcnSharp" Version="1.0.8" />
    <PackageReference Include="Lumina" Version="5.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.4" />
    <PackageReference Include="System.Memory" Version="4.6.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FBXCSharp\FBXCSharp.vcxproj" />
  </ItemGroup>

  
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == GithubRelease (&#xD;&#xA;    xcopy /y &quot;$(SolutionDir)prebuilt\FBXCSharp.dll&quot; &quot;$(TargetDir)&quot;&#xD;&#xA;) ELSE (&#xD;&#xA;    xcopy /y &quot;$(SolutionDir)$(Platform)\$(ConfigurationName)\FBXCSharp.dll&quot; &quot;$(TargetDir)&quot;&#xD;&#xA;)" />
  </Target>

</Project>
